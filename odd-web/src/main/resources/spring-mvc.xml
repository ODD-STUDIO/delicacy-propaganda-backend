<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd
       http://www.springframework.org/schema/mvc ">

    <!--1.开启注解扫描-->
    <context:component-scan base-package="com.odd.delicacy.controller"/>

    <!--2.配置视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- static resources -->
    <mvc:resources location="/static/back/" mapping="/back/**"/>
    <mvc:resources location="/static/front/" mapping="/front/**"/>

    <bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver" id="multipartResolver">
        <!--设置文件大小 5M(5*1024*1024)-->
        <property value="5242880" name="maxUploadSize"/>
        <!--编码-->
        <property value="utf-8" name="defaultEncoding"/>
    </bean>

    <!--3.开启注解驱动-->
    <mvc:annotation-driven/>

    <!--配置拦截器-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!--要拦截的路径-->
            <mvc:mapping path="/back/admin/**"/>
            <!--不拦截的路径-->
            <mvc:exclude-mapping path="/back/admin/login"/>
            <mvc:exclude-mapping path="/back/admin/auth"/>
            <bean class="com.odd.delicacy.interceptor.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>